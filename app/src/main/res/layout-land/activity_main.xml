<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_columnSpan="7"
    android:layout_rowSpan="7">

    <TextView
        android:id="@+id/tv_result"
        style="@style/AppTheme.CalculatorButton.Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="7"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/tv_c"
        android:tag="c"
        style="@style/AppTheme.CalculatorButton.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="C"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/tv_delete"
        android:tag="delete"
        style="@style/AppTheme.CalculatorButton.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:drawableStart="@drawable/ic_baseline_backspace"
        android:layout_gravity="fill_vertical" />
    <TextView
        android:id="@+id/tv_divider"
        android:tag="divider"
        style="@style/AppTheme.CalculatorButton.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:text= " / "
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/tv_smile"
        style="@style/AppTheme.CalculatorButton.Red.Land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:tag="smile"
        android:text=":D"
        tools:ignore="TextContrastCheck" />


    <TextView
        android:id="@+id/tv_7"
        android:tag="7"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:text="7"
        android:layout_gravity="fill_horizontal" />
    <TextView
        android:id="@+id/tv_8"
        android:tag="8"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:text="8"
        android:layout_gravity="fill_horizontal" />
    <TextView
        android:id="@+id/tv_9"
        android:tag="9"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:text="9"
        android:layout_gravity="fill_horizontal"/>
    <TextView
        android:id="@+id/tv_times"
        android:tag="times"
        style="@style/AppTheme.CalculatorButton.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:text=" X "
        android:layout_gravity="fill_horizontal" />
    <TextView
        android:id="@+id/tv_mod"
        android:tag="mod"
        style="@style/AppTheme.CalculatorButton.Red.Land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:text="%"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/tv_4"
        android:tag="4"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:text="4"
        android:layout_gravity="fill_horizontal"  />
    <TextView
        android:id="@+id/tv_5"
        android:tag="5"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:text="5"
        android:layout_gravity="fill_horizontal"  />
    <TextView
        android:id="@+id/tv_6"
        android:tag="6"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:text="6"
        android:layout_gravity="fill_horizontal"   />
    <TextView
        android:id="@+id/tv_minus"
        android:tag="minus"
        style="@style/AppTheme.CalculatorButton.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:text=" - "
        android:layout_gravity="fill_horizontal"/>
    <TextView
        android:id="@+id/tv_power"
        android:tag="power"
        style="@style/AppTheme.CalculatorButton.Red.Land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:text="^"
        android:layout_gravity="fill_horizontal"/>


    <TextView
        android:id="@+id/tv_1"
        android:tag="1"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:text="1"
        android:layout_gravity="fill_horizontal"   />
    <TextView
        android:id="@+id/tv_2"
        android:tag="2"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:text="2"
        android:layout_gravity="fill_horizontal"  />
    <TextView
        android:id="@+id/tv_3"
        android:tag="3"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:text="3"
        android:layout_gravity="fill_horizontal"  />
    <TextView
        android:id="@+id/tv_plus"
        android:tag="plus"
        style="@style/AppTheme.CalculatorButton.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:text=" + "
        android:layout_gravity="fill"/>
    <TextView
        android:id="@+id/tv_pi"
        android:tag="pi"
        style="@style/AppTheme.CalculatorButton.Red.Land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:text="Ï€"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:id="@+id/tv_point"
        android:tag="point"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:text="."
        android:layout_gravity="fill_horizontal"   />
    <TextView
        android:id="@+id/tv_0"
        android:tag="0"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:text="0"
        android:layout_gravity="fill_horizontal"   />
    <TextView
        android:id="@+id/tv_equals"
        android:tag="equals"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:text="="
        android:layout_gravity="fill_horizontal"  />
    <TextView
        android:id="@+id/tv_ans"
        android:tag="ans"
        style="@style/AppTheme.CalculatorButton.Red.Land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:text="ans"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:id="@+id/tv_last_oper"
        android:layout_row="1"
        android:layout_rowSpan="5"
        android:layout_column="5"
        android:layout_columnSpan="5"
        android:text="Last Operations:"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_gravity="fill" />
</GridLayout>