<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.CalculatorButton" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">40dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.CalculatorButton.Blue" parent="AppTheme.CalculatorButton">
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>

    <style name="AppTheme.CalculatorButton.Red" parent="AppTheme.CalculatorButton">
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

    <style name="AppTheme.CalculatorButton.Red.Land" parent="AppTheme.CalculatorButton">
        <item name="android:background">@android:color/holo_orange_dark</item>
    </style>

    <style name="AppTheme.CalculatorButton.Total" parent="AppTheme.CalculatorButton">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
</resources>